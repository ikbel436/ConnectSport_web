{% extends 'respo.html.twig' %}

{% block title %}New magasin{% endblock %}

{% block body %}
    <h1>Create new magasin</h1>


        {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}


        <div class="col-md-6 pr-1">
            <div class="form-group">
                <label>NOM magasin</label>
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nom) }}

            </div>
        </div>


        <div class="col-md-6 pr-1">
            <div class="form-group">
                <label>Adresse</label>
                {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.adresse) }}

            </div>
        </div>
        <div class="col-md-6 pr-1">
           
            <div class="form-group">
                    <label for="exampleInputPassword1">nombre bloc </label>
                    {{ form_widget(form.nombrebloc, {'attr': {'class': 'form-control'}}) }}
                     {{ form_errors(form.nombrebloc,{'attr':{"class":"mb-0"}}) }}
                  </div>
        </div>







        <div class="col-12 d-flex justify-content-end">
            <button class="btn">{{ button_label|default('Save') }}</button>
        </div>
        {{ form_end(form) }}



    <a href="{{ path('app_magasin_index') }}">back to list</a>
{% endblock %}


