{% extends 'respo.html.twig' %}

{% block title %}New Actualite{% endblock %}

{% block body %}
    <h1>Create new Actualite</h1>

    {{ form_start(form) }}

    <div class="row justify-space-between py-2">
        <div class="col-lg-4 mx-auto">
            <div class="input-group input-group-outline mb-4">
                <label class="form-label">Titre</label>
                {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.titre) }}
            </div>
        </div>
    </div>

    <div class="row justify-space-between py-2">
        <div class="col-lg-4 mx-auto">
            <div class="input-group input-group-outline mb-4">
                <label class="form-label">Description</label>
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.description) }}
            </div>
        </div>
    </div>





    <div class="col-md-6 pr-1">

    </div>
    <div class="col-md-6 pr-1">
        <div class="form-group">
            <label>image</label>
            {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}


        </div>
    </div>







    <div class="col-12 d-flex justify-content-end">
        <button class="btn">{{ button_label|default('Save') }}</button>

    </div>
    {{ form_end(form) }}











    <button class="btn btn-outline-primary" type="submit" onclick="window.location.href = '{{ path('app_actualite_index') }}';" role="button"> Back to list </button>

{% endblock %}
