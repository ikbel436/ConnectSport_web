

{% block title %}Personnel index{% endblock %}

{% block body %}
    <h1>Personnel </h1>
    <script src="{{ asset('responsable/assets/js/jquery.min.js') }}"></script>
    <input type="text" class="form-control" placeholder="Searchâ€¦" aria-label="Search"id="search">
    <table class="table" id="tableac">
        <thead>
        <tr>

            <th>Cin</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Datenaissance</th>
            <th>Adresse</th>
            <th>Mail</th>
            <th>Tel</th>
            <th>Salaire</th>
            <th>Image</th>
            <th>Sport</th>
            <th>Categorie</th>
            <th>Role</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for personnel in destination %}
            <script>
                $(document).ready(function(){
                    $('#search').keyup(function(){
                        search_table($(this).val());
                    });
                    function search_table(value){
                        $('#tableac tbody tr').each(function(){
                            var found = 'false';
                            $(this).each(function(){
                                if($(this).text().toLowerCase().indexOf(value.toLowerCase()) >= 0)
                                {
                                    found = 'true';
                                }
                            });
                            if(found == 'true')
                            {
                                $(this).show();

                            }
                            else
                            {
                                $(this).hide();

                            }
                        });
                    }
                });
            </script>
            <tr>

                <td>{{ personnel.cin }}</td>
                <td>{{ personnel.nom }}</td>
                <td>{{ personnel.prenom }}</td>
                <td>{{ personnel.datenaissance ? personnel.datenaissance|date('Y-m-d') : '' }}</td>
                <td>{{ personnel.adresse }}</td>
                <td>{{ personnel.mail }}</td>
                <td>{{ personnel.tel }}</td>
                <td>{{ personnel.salaire }}</td>
                <td>   <img style="width: 100px" src="{{ asset('uploads/' ~ personnel.image) }}"> </td>
                <td>{{ personnel.sport }}</td>
                <td>{{ personnel.categorie }}</td>
                <td>{{ personnel.role }}</td>

            </tr>
            {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

{% endblock %}
