{% extends 'respo.html.twig' %}

{% block title %}Contrat{% endblock %}

{% block body %}
    <h1>Contrat</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>Nom</th>
                <td>{{ contrat.nom }}</td>
            </tr>
            <tr>
                <th>Datecontrat</th>
                <td>{{ contrat.datecontrat ? contrat.datecontrat|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ contrat.type }}</td>
            </tr>
            <tr>
                <th>Personnel</th>
                <td>{{ contrat.idp.nom }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ contrat.idp.role }}</td>
            </tr>
        </tbody>
    </table>
    <button class="btn btn-outline-primary" type="submit" onclick="window.location.href = '{{ path('app_contrat_index') }}';" role="button"> back
    </button>
    <button class="btn btn-outline-primary" type="submit" onclick="window.location.href = '{{ path('app_contrat_edit', {'id': contrat.id}) }}';" role="button"> edit
    </button>

    {{ include('contrat/_delete_form.html.twig') }}
{% endblock %}
