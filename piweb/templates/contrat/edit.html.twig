{% extends 'respo.html.twig' %}

{% block title %}Edit Contrat{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <h1>Edit Contrat</h1>


    <div class="col-md-6 pr-1">
        <div class="input-group input-group-dynamic mb-4">
            <label style="color:#7b197d;font-weight:600;">NOM</label>
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom) }}

        </div>
    </div>


    <div class="col-md-6 pr-1">
        <div class="input-group input-group-dynamic mb-4">
            <label style="color:#7b197d;font-weight:600;">datecontrat</label>
            {{ form_widget(form.datecontrat, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.datecontrat) }}

        </div>
    </div>
    <div class="col-md-6 pr-1">
        <div class="input-group input-group-dynamic mb-4">
            <label style="color:#7b197d;font-weight:600;">type</label>
            {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.type) }}

        </div>
    </div>


    <div class="col-md-6 pr-1">
        <div class="input-group input-group-dynamic mb-4">
            <label style="color:#7b197d;font-weight:600;">idp</label>
            {{ form_widget(form.idp , {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.idp) }}

        </div>
    </div>

    <div class="col-md-6 pr-1">
        <div class="input-group input-group-dynamic mb-4">
            <label style="color:#7b197d;font-weight:600;">idr</label>
            {{ form_widget(form.idr, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.idr) }}

        </div>
    </div>





    <button class="btn btn-outline-primary">{{ button_label|default('Save') }}</button>
    <button class="btn btn-outline-primary" type="submit" onclick="window.location.href = '{{ path('app_contrat_index') }}';" role="button"> back
    </button>
    {{ form_end(form) }}


{% endblock %}
