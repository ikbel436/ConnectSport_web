

{% block title %}Produit index{% endblock %}


<style>
    body{
        font:normal 15px/20PX "Liberation sans", Arial, Helvetica, sans-serif;
        color:#585858;
    }
    img{
        width:300px;
        margin:10px;
        border: solid 5px #E8E8E8;

    }
</style>
<style>
    #customers {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    #customers td, #customers th {
        border: 1px solid #7b197d;
        padding: 8px;
    }

    #customers tr:nth-child(even){background-color: #dddddd;}

    #customers tr:hover {background-color: #00a5bb;}

    #customers th {
        padding-top: 12px;
        padding-bottom: 12px;
        text-align: left;
        background-color: #7b197d;
        color: white;
    }
</style>
{% block body %}
    <h1>Produit index</h1>

    <img src='data:image;base64,<?= {{ img64 }};?>' />
    {% endblock %}


    <table id="customers" class="table">
        <thead>
        <tr>

            <th>NomP</th>
            <th>Prix</th>
            <th>Categorie</th>


        </tr>
        </thead>
        <tbody id="all">
        {% for produit in produits %}
            <tr>

                <td>{{ produit.nomP }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.categorie }}</td>



            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}

    </table>









