{% extends 'respo.html.twig' %}

{% block title %}New Sponsor{% endblock %}

{% block body %}
    {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
    <h1>Create new Sponsor</h1>
    <div class="col-md-6 pr-1">
        <div class="input-group input-group-dynamic mb-4">
            <label class=" form-control-label" > NOM</label>
<div>
    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.nom) }}
</div>


        </div>
    </div>
    <div class="col-md-6 pr-1">
        <div class="input-group input-group-dynamic mb-4">
            <label>prenom</label>
            {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.prenom) }}

        </div>
    </div>

    <div class="col-md-6 pr-1">
        <div class="input-group input-group-dynamic mb-4">
            <label>adresse</label>
            {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.adresse) }}

        </div>
    </div>
    <div class="col-md-6 pr-1">
        <div class="input-group input-group-dynamic mb-4">
            <label>tel</label>
            {{ form_widget(form.tel, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.tel) }}

        </div>
    </div>
    <div class="col-md-6 pr-1">
        <div class="input-group input-group-dynamic mb-4">
            <label>mail</label>

            {{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.mail) }}

        </div>
    </div>
    <div class="col-md-6 pr-1">
        <div class="input-group input-group-dynamic mb-4">
            <label>datenaissance</label>

            {{ form_widget(form.datenaissance, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.datenaissance) }}

        </div>
    </div>
    <div class="col-12 d-flex justify-content-end">
        <button class="btn btn-outline-primary">{{ button_label|default('Save') }}</button>
    </div>
{{ form_end(form) }}

