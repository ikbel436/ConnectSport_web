{% extends 'backtemplate.html.twig' %}
{% block title %}Statistques Produits {% endblock %}
{% block body %}

    {% block stylesheets %}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.css" integrity="sha512-/zs32ZEJh+/EO2N1b0PEdoA10JkdC3zJ8L5FTiQu82LR9S/rOQNfQN7U59U9BC12swNeRAz3HSzIL2vpp4fv3w==" crossorigin="anonymous">
    {% endblock %}
    <div class="container">
        <h1>Statistiques</h1>
        <canvas id="categories" width="400" height="100"></canvas>

        <canvas id="produits" width="400" height="100"></canvas>
        <canvas id="produits1" width="400" height="100"></canvas>

        <canvas id="events" width="400" height="100"></canvas>
    </div>

    {% block javascripts %}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js" integrity="sha512-s+xg36jbIujB2S2VKfpGmlC3T5V2TF3lY48DX7u2r9XzGzgPsa6wTpOQA7J9iffvdeBN0q9tKzRxVxw1JviZPg==" crossorigin="anonymous"></script>
        <script>

            let categories = document.querySelector("#categories")
            let categGraph = new Chart(categories, {
                type: "pie",
                data: {
                    labels: {{ active|raw }},

                    datasets: [{
                        label: "Répartition des catégories",
                        data: {{ personneCount|raw }},
                        backgroundColor: [
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 159, 64, 0.2)'
                        ],
                    }]

                }
            })
            </script>

        <div >
    <script>
                     // 2
            let produits = document.querySelector("#produits")
            let proGraph = new Chart(produits, {
                type: "line",
                data: {
                    labels: {{ role|raw }},
                    datasets: [{
                        label: "Répartition des utilisateurs selon role",
                        data: {{ personnecount|raw }},
                        backgroundColor: [
                         'rgba(54, 162, 235, 0.2)',
                         'rgba(255, 206, 86, 0.2)',],
                    }]
                },
                options: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            })
</script>
<script>
