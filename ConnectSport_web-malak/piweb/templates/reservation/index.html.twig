{% extends 'respo.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
    <h1>Reservation index</h1>

    <table id="bootstrap-data-table-export" class="table table-striped table-bordered" style="size: 50px">
        <thead>
            <tr>

                <th>Nom</th>
                <th>Prenom</th>
                <th>Age</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>

                <td>{{ reservation.nom }}</td>
                <td>{{ reservation.prenom }}</td>
                <td>{{ reservation.age }}</td>
                <td>
                    <button class="btn btn-outline-primary" type="submit" onclick="window.location.href = '{{ path('app_reservation_show', {'id': reservation.id}) }}';" role="button"> delete

                    </button>
                    <button class="btn btn-outline-primary" type="submit" onclick="window.location.href = '{{ path('app_reservation_edit', {'id': reservation.id}) }}';" role="button"> update
                    </button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(reservations) }}
    <a  class="btn btn-danger btn-sm" href="{{ path('export') }}">
        <i class="far fa-calendar-alt">
        </i>
        excel
    </a>
    <a  class="btn btn-danger btn-sm" href="{{ path('stats') }}">
        <i class="far fa-calendar-alt">
        </i>
        stat
    </a>
{% endblock %}
