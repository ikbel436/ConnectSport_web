{% extends 'fan.html.twig' %}

{% block title %}New Reservation{% endblock %}

{% block body %}
    <h1>Create new Reservation</h1>

    {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}

    <div class="col-md-6 pr-1">
        <div class="input-group input-group-dynamic mb-4">
            <label style="color:#7b197d;font-weight:600;">NOM</label>
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom) }}

        </div>
    </div>
    <div class="col-md-6 pr-1">
        <div class="input-group input-group-dynamic mb-4">
            <label style="color:#7b197d;font-weight:600;">prenom</label>
            {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.prenom) }}

        </div>
    </div>

    <div class="col-md-6 pr-1">
        <div class="input-group input-group-dynamic mb-4">
            <label style="color:#7b197d;font-weight:600;">age</label>
            {{ form_widget(form.age, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.age) }}

        </div>
    </div>


    <div class="col-md-6 pr-1">
        <div class="input-group input-group-dynamic mb-4">
            <label style="color:#7b197d;font-weight:600;">code</label>
            {{ form_widget(form.captchaCode, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.captchaCode) }}

        </div>
    </div>


    <div class="col-12 d-flex justify-content-end">
        <button class="btn btn-outline-primary">{{ button_label|default('Save') }}</button>
    </div>

   {#  {{ include('reservation/_form.html.twig') }} #}
{{ form_end(form) }}
    <button class="btn btn-outline-primary" type="submit" onclick="window.location.href = '{{ path('app_reservation_index') }}';" role="button"> list
    </button>
{% endblock %}
