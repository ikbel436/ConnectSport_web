{% extends 'respo.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ reservation.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ reservation.prenom }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ reservation.age }}</td>
            </tr>
        </tbody>
    </table>
    <button class="btn btn-outline-primary" type="submit" onclick="window.location.href = '{{ path('app_reservation_index') }}';" role="button"> list
    </button>
    <button class="btn btn-outline-primary" type="submit" onclick="window.location.href = '{{ path('app_reservation_edit', {'id': reservation.id}) }}';" role="button"> edit
    </button>

    {{ include('reservation/_delete_form.html.twig') }}
{% endblock %}
