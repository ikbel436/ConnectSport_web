    {{ form_start(form) }}
    <h1>Edit Reservation</h1>


    <div class="col-md-6 pr-1">
        <div class="input-group input-group-dynamic mb-4">
            <label style="color:#7b197d;font-weight:600;">NOM</label>
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom) }}

        </div>
    </div>
    <div class="col-md-6 pr-1">
        <div class="input-group input-group-dynamic mb-4">
            <label style="color:#7b197d;font-weight:600;">prenom</label>
            {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.prenom) }}

        </div>
    </div>

    <div class="col-md-6 pr-1">
        <div class="input-group input-group-dynamic mb-4">
            <label style="color:#7b197d;font-weight:600;">age</label>
            {{ form_widget(form.age, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.age) }}

        </div>
    </div>
    <div class="col-md-6 pr-1">
        <div class="input-group input-group-dynamic mb-4">
            <label style="color:#7b197d;font-weight:600;">idf</label>
            {{ form_widget(form.idf, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.idf) }}

        </div>
    </div>
    <div class="col-md-6 pr-1">
        <div class="input-group input-group-dynamic mb-4">
            <label style="color:#7b197d;font-weight:600;">idr</label>
            {{ form_widget(form.idr, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.idr) }}

        </div>
    </div>

    <div class="col-12 d-flex justify-content-end">
        <button class="btn btn-outline-primary">{{ button_label|default('Save') }}</button>
    </div>

