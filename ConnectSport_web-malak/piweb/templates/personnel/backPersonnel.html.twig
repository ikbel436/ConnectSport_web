{% extends 'backtemplate.html.twig' %}

{% block title %}Liste des Personnels{% endblock %}
{% block body %}

    <div class="card-title">
        <h1 align="center" style="color:#7b197d">Liste des Personnels</h1>
    </div>
    <style>
        #customers {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        #customers td, #customers th {
            border: 1px solid #7b197d;
            padding: 8px;
        }

        #customers tr:nth-child(even){background-color: #dddddd;}

        #customers tr:hover {background-color: #00a5bb;}

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #7b197d;
            color: white;
        }
    </style>
    <section class="section">


        <div class="col-md-12">
            <div>

                <div>
                    <table   class="table table-striped dataTable-table" style="size: 50px">
                        <thead>
                        <tr class="dataTable-wrapper">


                            <th>Cin</th>
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Datenaissance</th>
                            <th>Adresse</th>
                            <th>Mail</th>
                            <th>Tel</th>
                            <th>Salaire</th>
                            <th>Image</th>
                            <th>Sport</th>
                            <th>Categorie</th>
                            <th>Role</th>

                        </tr>

                        </thead>
                        <tbody>
                        {% for personnel in personnels %}
                            <tr>

                                <td>{{ personnel.cin }}</td>
                                <td>{{ personnel.nom }}</td>
                                <td>{{ personnel.prenom }}</td>
                                <td>{{ personnel.datenaissance ? personnel.datenaissance|date('Y-m-d') : '' }}</td>
                                <td>{{ personnel.adresse }}</td>
                                <td>{{ personnel.mail }}</td>
                                <td>{{ personnel.tel }}</td>
                                <td>{{ personnel.salaire }}</td>
                                <td>   <img style="width: 100px" src="{{ asset('uploads/' ~ personnel.image) }}"> </td>
                                <td>{{ personnel.sport }}</td>
                                <td>{{ personnel.categorie }}</td>
                                <td>{{ personnel.role }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="13">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
