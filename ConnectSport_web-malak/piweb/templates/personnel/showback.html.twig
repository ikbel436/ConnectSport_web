{% extends 'backtemplate.html.twig' %}

{% block title %}Personnel{% endblock %}

{% block body %}
    <h1>Personnel</h1>
    <style>
        #customers {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }
    </style>

    <table  id="customers" class="table">
        <tbody>

        <tr>
            <th>Cin</th>
            <td>{{ personnel.cin }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ personnel.nom }}</td>
        </tr>
        <tr>
            <th>Prenom</th>
            <td>{{ personnel.prenom }}</td>
        </tr>
        <tr>
            <th>Datenaissance</th>
            <td>{{ personnel.datenaissance ? personnel.datenaissance|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Adresse</th>
            <td>{{ personnel.adresse }}</td>
        </tr>
        <tr>
            <th>Mail</th>
            <td>{{ personnel.mail }}</td>
        </tr>
        <tr>
            <th>Tel</th>
            <td>{{ personnel.tel }}</td>
        </tr>
        <tr>
            <th>Salaire</th>
            <td>{{ personnel.salaire }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td>   <img style="width: 100px" src="{{ asset('uploads/' ~ personnel.image) }}"> </td>
        </tr>
        <tr>
            <th>Sport</th>
            <td>{{ personnel.sport }}</td>
        </tr>
        <tr>
            <th>Categorie</th>
            <td>{{ personnel.categorie }}</td>
        </tr>
        <tr>
            <th>Role</th>
            <td>{{ personnel.role }}</td>
        </tr>
        </tbody>
    </table>




{% endblock %}
